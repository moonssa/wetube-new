extends base.pug
    
block content
    video(src="/"+ video.fileUrl, controls)
    div
        p=video.description
        small=video.createdAt
    div 
        a(href=`/users/${loggedInUser._id}`) Uploaded by #{video.owner.name}
    if String(video.owner._id) === String(loggedInUser._id)
        a(href=`${video.id}/edit`) Edit video &rarr;
        br
        a(href=`${video.id}/delete`) Delete video &rarr;d