mixin video(video)
    div 
        h4
            a(href=`/videos/${video.id}`)=video.title
        ul
            li #{video.description} 
            li #{video.meta.rating}/5
            li #{video.meta.views} #{video.views > 1 ? "views": "view"}
            li #{video.createdAt} created
            li #{video.hashtags}